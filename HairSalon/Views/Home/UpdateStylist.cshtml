@{
  Layout = "_Layout";
}

<h1>Update Stylist @Model.GetName()</h1>
<div class="stylistDetails">
  <form id="updateStylist" action="/stylist/@stylist.GetId()/update" method="post">
    <label for="name">Update Name</label>
    <input type="text" name="name" id="name">
    <button class="button" type="submit" name="button">Submit</button>
  </form>
</div>

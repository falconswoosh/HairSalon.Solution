[ClientPost]:

int stylistId = int.Parse(Request.Form["stylist-Id"]);
Client newClient = new Client(Request.Form["clientName"], stylistId);

<Controller.cs>:

[HttpPost("/stylist/{id}/client")]
public ActionResult ClientPost(int id)
{
int stylistId = int.Parse(Request.Form["stylist-id"]);
Client newClient = new Client(Request.Form["client-name"], stylistId);
newClient.Save();
return Redirect("/stylist/" + stylistId)
}

Dictionary<string, object> model = new Dictionary<string, object>();
Stylist selectedStylist = Stylist.Find(Int32.Parse(Request.Form["stylist-id"]));
List<Client> stylistClients = selectedStylist.GetClients();
string clientName = Request.Form["client-name"];
Client newClient = new Client(clientName);
StylistClient.Add(newClient);
model.Add("clients", stylistClients);
model.Add("stylist", selectedStylist);
return View("StylistDetail",model);
